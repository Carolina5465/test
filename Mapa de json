import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import org.json.JSONObject;   // ðŸ”¹ IMPORTANTE

public class OperationsFormsBaca extends BaseCommonStepDefs {

    public static Map<String, String> parseFlatJsonToMap(String json) {
        Map<String, String> map = new HashMap<>();
        JSONObject obj = new JSONObject(json);   // âœ… ya no darÃ¡ error
        Iterator<String> keys = obj.keys();

        while (keys.hasNext()) {
            String key = keys.next();
            Object value = obj.get(key);
            map.put(key, value != null ? value.toString() : null);
        }
        return map;
    }
}
